<div class="container">
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Price</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= @product.name %></td>
				<td><%= @product.pricing %></td>
				<td><%= @product.description %></td>
				<td><%= link_to 'Edit', edit_product_path(@product), :class=>'btn' %></td>
				<td><%= link_to 'Delete', @product, :class=>'btn btn-danger', method: :delete, data: {confirm: 'Are you sure'} %>
			</tr>
		</tbody>
	</table>
	<%= link_to 'Back', products_path, :class=>"btn" %>
</div>
