<div class="container">
	<h3>Product <%= @product.name %></h3>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Price</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= @product.name %></td>
				<td><%= @product.pricing %></td>
				<td><%= @product.description %></td>
				<td><%= @product.category.name %></td>
				<td><%= link_to 'Edit', edit_product_path(@product), :class=>'btn' %></td>
				<td><%= link_to 'Delete', @product, :class=>'btn btn-danger', method: :delete, data: {confirm: 'Are you sure'} %>
			</tr>
		</tbody>
	</table>
	<% @comments.each do |comment| %>
		<%= comment.author %><br>
		<%= comment.content %><br>
		<p></p>
	<% end %>

	<%= simple_form_for(@comment) do |f| %>
		<%= f.input :author %>
		<%= f.input :content, :as => :text, :input_html => { :rows => 4, :cols=> 2} %>
		<%= f.hidden_field :product_id, value: @product.id %>
		<%= f.button :submit %>
	<% end %>

	<%= link_to 'Back', products_path, :class=>"btn" %>
</div>
