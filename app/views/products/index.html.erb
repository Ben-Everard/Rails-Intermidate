<div class="container">
<h3>Products for sale</h3>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Price</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<% @products.each do |product| %>
					<td><%= product.name %></td>
					<td><%= product.pricing %></td>
					<td><%= product.description %></td>
					<td><%= link_to 'Show', product, :class=>'btn' %></td>
					<td><%= link_to 'Edit', edit_product_path(product), :class=>'btn' %></td>
					<td><%= link_to 'Delete', product, :class=>'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to 'New', new_product_path, :class=>"btn" %>

</div>
